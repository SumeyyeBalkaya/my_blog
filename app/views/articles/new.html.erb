<%= form_with scope: :article, url: articles_path, local: true do |form| %>

  <h1>Yeni Metin</h1>

  <% if @article.errors.any? %>

    <div id="error_explanation">
      <h2>
        <%= pluralize(@article.errors.count, "hata") %>
        bu metinin kaydedilmesine engel oluyor:
      </h2>

      <ul>
        <% @article.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>

  <% end %>

  <p>
    <%= form.label :başlık %><br>
    <%= form.text_field :title %>
  </p>

  <p>
    <%= form.label :metin %><br>
    <%= form.text_area :text %>
  </p>

  <p>
    <%= form.submit :Kaydet %>
  </p>

<% end %>

<%= link_to 'Tüm Metinler', articles_path %>